<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/tvMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="280dp" android:background="@drawable/bg_chat_bubble_received" android:textColor="@android:color/black"
        android:padding="12dp"
        android:text="This is a sample received message."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="10:31 AM"
        app:layout_constraintTop_toBottomOf="@id/tvMessageBody"
        app:layout_constraintStart_toStartOf="@id/tvMessageBody"
        android:layout_marginTop="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>