<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Dishora" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@android:color/white</item>

        <!-- Status & nav bars -->
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/orange</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/orange</item>

        <!-- Material3 surface system -->
        <item name="colorSurface">@color/orange</item>
        <item name="colorSurfaceVariant">@color/orange</item>
        <item name="colorSurfaceContainer">@color/orange</item>
        <item name="colorSurfaceContainerLow">@color/orange</item>
        <item name="android:colorBackground">@color/orange</item>

        <!-- Text/icon colors on orange -->
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorOnBackground">@android:color/black</item>

    </style>

    <style name="Theme.Dishora" parent="Base.Theme.Dishora" />
</resources>