<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="MyDefaultButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#E8F1FF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FilterChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">true</item>
        <item name="closeIconTint">@color/black</item>
        <item name="closeIconEndPadding">4dp</item>
        <item name="closeIconSize">18dp</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>

    <style name="TabButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item> <!-- Ensure no default tint -->
        <item name="android:background">@drawable/tab_selector</item> <!-- Use the custom selector -->
        <item name="android:textColor">@color/tab_text_selector</item> <!-- Text color for tab -->
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundedInputs" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedInputsMenu" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CartCircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThumbRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Rounded corners for filled text fields -->
    <style name="ShapeAppearanceOverlay.M3.TextField.Filled.Rounded"
        parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox.Orange" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textfield_outline_color</item>
        <item name="hintTextColor">@color/textfield_hint_color</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox.Custom" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/RoundedInputsMenu</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/textfield_outline_color</item>
        <item name="hintTextColor">@color/textfield_hint_color</item>
    </style>

    <!-- NEW STYLE for the Orange AppCompat Switch -->
    <style name="Widget.App.Switch.Orange" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_tint</item>
        <item name="trackTint">@color/switch_track_tint</item>
    </style>

    <style name="ReviewRow" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ReviewLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ReviewValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Widget.App.CardView.RequirementSection" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>